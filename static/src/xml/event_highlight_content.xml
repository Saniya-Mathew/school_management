<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="school.category_data">
        <div id="course_carousel" class="container carousel slide" data-bs-ride="carousel" t-att-data-bs-interval="interval">
            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                <t t-foreach="chunks" t-as="chunk">
                    <div t-att-class="chunk.is_active ? 'carousel-item active' : 'carousel-item'">
                        <div class="row">
                            <t t-foreach="chunk" t-as="event">
                                <div class="block span3 col-6" >
                                    <div class="card-group" style = "width: 200px; height: 300px;">
                                        <div class="card text-center p-2" >
                                        <t t-if="event.image">
                                            <img t-att-src="'data:image/png;base64,' + event.image"
                                             class="card-img-top"
                                             t-att-alt="event.name or 'Event Image'"
                                             loading="lazy" style="height: 200px;"/>
                                        </t>
                                        <t t-else="">
                                            <img src="/school/static/src/img/images.jpeg"
                                             class="card-img-top"
                                             alt="Default event Image"
                                             loading="lazy" style="height: 200px;"/>
                                        </t>
                                        <div class="type" style="padding-top: 15px">
                                            <t t-esc="event.name"/>
                                        </div></div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <a t-attf-href="#event_carousel" class="carousel-control-prev" data-bs-slide="prev"
                           role="button" aria-label="Previous" title="Previous">
                            <span class="fa fa-chevron-circle-left fa-2x" style="color:white"/>
                        </a>
                        <a t-attf-href="#event_carousel" class="carousel-control-next" data-bs-slide="next"
                           role="button" aria-label="Next" title="Next">
                            <span class="fa fa-chevron-circle-right fa-2x" style="color:black"/>
                        </a>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
