<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="student_list_template">
        <t t-call="website.layout">
             <div id="wrap" class="oe_structure oe_empty">
                 <div style="padding: 30px; text-align: center; color: white; background-color: grey">
                    <h1>Student Registration</h1>
                 </div>
                 <div class="container" style="padding-top: 30px">
                     <list action="/students/new" enctype="multipart/form-data" class="o_mark_required"
                           data-mark="*" data-model_name="" data-success-page="">
                         <div class="list-group col-12 s_create_student_registration mt-3" data-name="Submit Button">
                             <div class="row">
                                 <div class="col-sm">
                                     <button type="submit" class="btn btn-primary o_website_form_send" >
                                         New
                                     </button>
                                 </div>
                             </div>
                         </div>
                         <table class="table table-border">
                             <thead>
                                 <tr>
                                     <th>
                                         <strong>Reg.no</strong>
                                     </th>
                                     <th>
                                         <strong>Name</strong>
                                     </th>
                                     <th>
                                         <strong>Admission Date</strong>
                                     </th>
                                     <th>
                                         <strong>email</strong>
                                     </th>
                                     <th>
                                         <strong>Date of Birth</strong>
                                     </th>
                                 </tr>
                             </thead>
                         </table>
                     </list>
                 </div>
             </div>
        </t>
    </template>
</odoo>