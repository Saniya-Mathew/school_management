<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="report_student">
       <t t-call="web.html_container">
           <t t-call="web.external_layout">
               <div class="page">
                   <div class="oe_structure">
                        <h2 style="text-align: center;">Student leave Report </h2>
                       <h5> Student Name:
                           <t t-out ="data.get('student_id')"/></h5>
                        <table class="table table-border">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>class</th>
                                    <th>Reg No</th>
                                    <th>Date From</th>
                                    <th>Date To</th>
                                    <th>Reason</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="data.get('report')">
                                    <t t-foreach="data.get('report')" t-as="row">
                                        <tr>
                                            <td><t t-esc="row.get('f_name')"/></td>
                                            <td><t t-esc="row.get('class_id')"/></td>
                                            <td><t t-esc="row.get('reg_no')"/></td>
                                            <td><t t-esc="row.get('date_from')"/></td>
                                            <td><t t-esc="row.get('date_to')"/></td>
                                            <td><t t-esc="row.get('reason')"/></td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
               </div>
           </t>
       </t>
   </template>
</odoo>
